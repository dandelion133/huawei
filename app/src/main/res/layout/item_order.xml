<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/bg_button2"
                android:layout_height="70dp">

    <ImageView
        android:id="@+id/see_more"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        />


    <com.qian.ui.SquareImageView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:id="@+id/order_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dish"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_normal"
        />
    <TextView

        android:id="@+id/seat_num_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10号桌"
        android:textSize="15sp"
        android:layout_toRightOf="@id/order_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black1"
        />


    <TextView

        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textSize="15sp"
        android:layout_toRightOf="@id/seat_num_order"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/dark_grey"
        />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="合计：￥25"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/red"
        android:layout_toRightOf="@id/order_image"
        android:layout_below="@id/seat_num_order"

        />


    <TextView
        android:id="@+id/status"
        android:layout_width="70dp"
        android:layout_height="wrap_content"

        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/see_more"
        android:text="查看详情"
        android:textColor="@color/green"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        >

    </TextView>




    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_pale"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

